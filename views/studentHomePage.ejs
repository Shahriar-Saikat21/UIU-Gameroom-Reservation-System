<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UIU Game Room Reservation || Student</title>
  <link rel="icon" href="/images/uiuLogo.png">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/studentHomePage.css">
  <script src="/js/bootstrap.bundle.min.js" defer></script>
  <script src="/js/logOutBtn.js" defer></script>
  <script src="/js/cancelReservation.js" defer></script>
</head>

<body>

  <%-include('studentNavbar.ejs')%>

    <div class="container formTopMargin">
      <div class="text-left">
        <div class="row">
          <div class="col-lg-7 col-12">
            <div class="row">
              <div class="col">
                <p class="mt-3"><b>Upcoming Schedule</b></p>
              </div>
              <div class="col text-lg-end text-end">
                <h6 class="mt-3"><a href="/studentHistoryPage">Reservation History</a></h6>
              </div>
            </div>
            <% time.forEach((i) =>{%>
              <div class="schedule row bg-body-tertiary p-3 rounded-2 mb-4">
                <div class="col-lg-8 col-12">
                  <h6><b>Schedule Token: <%= i._id %> </b></h6>
                  <h6><b>Date: <%= i.reservationDate %></b></h6>
                  <h6><b>Game: <%= i.game %></b></h6>
                  <h6><b>Board: <%= i.board %></b></h6>
                  <h6><b>Schedule: <%= i.reservationTime %></b></h6>
                </div>
                <div class="col-lg-4 col-12 d-flex flex-column align-items-lg-end">
                  <h6 class="text-secondary"><b><%= new Date().toJSON().slice(0, 10) %> days to go</b></h6>
                  <div class="mt-auto">
                    <button type="button" class="btn btn-danger cancelBtn" name=<%= i.reservationDate %> id=<%= i._id %>>Cancel Reservation</button>
                  </div>
                </div>
              </div>
            <% })%>
          </div>
          <div class="col-lg-5 col-12 p-5">
            <div class="row">
              <div class="card text-lg-end rounded-circle">
                <img src="/images/BG.png" class="rounded-circle" width="288" height="288">
              </div>
            </div>
            <div class="row">
              <h5><b>Name: <%= user.name%></b></h5>
              <h5><b>Email: <%= user.email%></b></h5>
              <h5><b>ID: <%= user.studentID%></b></h5>
              <h6><a href="#">Upload Profile Picture</a></h6>
              <h6><a href="#">Change Password</a></h6>
            </div>
          </div>
        </div>
      </div>
    </div>

</body>

</html>